
<% include ./partials/header %>
<div class="container" style="margin: 10% 15% ">

    <% blogs.forEach(function(blog){ %>
        <div class="card" style="width: 30rem;text-align: center;margin-bottom: 2rem">
            <img class="card-img-top" src="<%=blog.image%>" alt="Card image cap">
            <div class="card-body">
                <h5 class="card-title"><%= blog.title %></h5>
                <p class="card-text"><%- blog.body.substring(0,50) %></p>
                <a href="/blogs/<%=blog._id%>" class="btn btn-primary">Read More</a>
            </div>
        </div>
        <% })  %>
</div>

<% include ./partials/footer %>

